<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/img/footer-logo.png" type="image/x-icon">
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    @if (IsSectionDefined("Style"))
        RenderSection("Style");

    <title>@ViewData["Title"]</title>
</head>

<body>
    <div class="wrapper">
        <header class="header">
            <div class="header_nav">
                <ul class="header_nav-lists">
                    <li class="header_nav-item"><a class="header_nav-link text-nav home_header-link" href="#">Home</a></li>
                    <span class="stick_header text-nav"> | </span>
                    <li class="header_nav-item"><a class="header_nav-link text-nav" href="./book-info.html">Book</a></li>
                    <span class="stick_header text-nav"> | </span>
                    <li class="header_nav-item"><a class="header_nav-link text-nav" href="#">Authors</a></li>
                    <span class="stick_header text-nav"> | </span>
                    <li class="header_nav-item"><a class="header_nav-link text-nav" href="./about-us.html" target="_parent">About us</a></li>
                    <span class="stick_header text-nav"> | </span>
                    <li class="header_nav-item"><a class="header_nav-link text-nav" href="./about-us.html" target="_parent">Contact</a></li>
                </ul>
            </div>
        </header>
        @if (IsSectionDefined("HeaderContent"))
            RenderSection("HeaderContent");
        
        <main>
            @RenderBody()
            @await Html.PartialAsync("~/Views/Shared/_Recommendations.cshtml", ViewData["Recommendations"])
        </main>
        <footer class="footer">
            <div class="container">
                <div class="footer_inner">
                    <div class="first_col">
                        <div class="first_inner">
                            <div class="footer_logo">
                                <img src="/img/footer-logo.png" alt="logo">
                            </div>
                            <p class="logo_text">
                                Nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                            </p>
                            <ul class="footer_links">
                                <li class="footer_items">
                                    <a class="footer_socials-link" href="#">
                                        <img src="/img/facebook.png"
                                             alt="facebook">
                                    </a>
                                </li>
                                <li class="footer_items">
                                    <a class="footer_socials-link" href="#">
                                        <img src="/img/linkedin.png"
                                             alt="linkedin">
                                    </a>
                                </li>
                                <li class="footer_items">
                                    <a class="footer_socials-link" href="#">
                                        <img src="/img/twitter.png"
                                             alt="twitter">
                                    </a>
                                </li>
                                <li class="footer_items">
                                    <a class="footer_socials-link" href="#">
                                        <img src="/img/youtube.png"
                                             alt="youtube">
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="second_col">
                        <div class="second_inner">
                            <h2 class="company_name">Company</h2>
                            <ul class="footer_second-list">
                                <li class="footer_second-item"><a class="footer_item-link sefooter" href="#">HOME</a></li>
                                <li class="footer_second-item"><a class="footer_item-link sefooter" href="./book-info.html" target="_parent">BLOG</a></li>
                                <li class="footer_second-item"><a class="footer_item-link sefooter" href="#">AUTHORS</a></li>
                                <li class="footer_second-item"><a class="footer_item-link sefooter" href="./about-us.html" target="_parent">ABOUT US</a></li>
                                <li class="footer_second-item"><a class="footer_item-link sefooter" href="./about-us.html" target="_parent">CONTACT</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="third_col">
                        <div class="third_inner">
                            <h2 class="company_name">Important Links</h2>
                            <ul class="footer_third-list">
                                <li class="footer_third-item"><a class="footer_item-link" href="#">Privacy Policy</a></li>
                                <li class="footer_third-item"><a class="footer_item-link" href="#">FAQs</a></li>
                                <li class="footer_third-item"><a class="footer_item-link" href="#">Terms of Service</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="go_top">
                        <p><a class="top company_name" href="#">Go TO Top &#8963;</a></p>
                    </div>
                </div>
                <div class="footer_end">
                    <p class="footer_end-text">© 2023 Slash Inc. All rights reserved.</p>
                    <p class="footer_end-text2">Privacy | Terms of Service</p>
                </div>
            </div>
        </footer>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js" integrity="sha512-pumBsjNRGGqkPzKHndZMaAG+bir374sORyzM3uulLV14lN5LyykqNk8eEeUlUkB3U0M4FApyaHraT65ihJhDpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    @if (IsSectionDefined("Script"))
        RenderSection("Script");

</body>

</html>